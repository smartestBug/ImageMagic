<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/antiflash_white</item>

        <item name="colorPrimary">@color/grey_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/grey_blue</item>
        <item name="colorControlActivated">@color/red_apple</item>
        <item name="colorControlHighlight">@color/azureish_white</item>
        <item name="android:textColorHint">@color/grey_blue</item>

        <item name="colorButtonNormal">@color/gunmetal</item>

        <item name="android:textColorPrimary">@color/gunmetal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/grey_blue</item>

        <item name="alertDialogTheme">@style/IM_Dialog_Alert</item>
    </style>

    <style name="IM_Dialog_Alert" parent="Theme.AppCompat.Dialog">
        <item name="android:textColorPrimary">@color/android_green</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
